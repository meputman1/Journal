{
  "name": "journal-app",
  "description": "A beautiful journaling application with Express server and MongoDB Atlas",
  "repository": "https://github.com/meputman1/Journal",
  "logo": "https://node-js-sample.herokuapp.com/node.png",
  "keywords": ["node", "express", "journal", "mongodb"],
  "env": {
    "NODE_ENV": {
      "description": "Environment setting",
      "value": "production"
    },
    "JWT_SECRET": {
      "description": "Secret key for JWT tokens",
      "generator": "secret"
    },
    "MONGODB_URI": {
      "description": "MongoDB Atlas connection string",
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
} 