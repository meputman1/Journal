# Journal App Environment Variables
# Copy this file to .env and fill in your values

# Node Environment
NODE_ENV=production

# JWT Secret (Generate a strong random string - at least 32 characters)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-here-change-this-immediately

# MongoDB URI (Optional - if you want to use MongoDB instead of SQLite)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/journal-app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Settings
SESSION_SECRET=your-session-secret-here
COOKIE_SECURE=true
COOKIE_HTTPONLY=true

# CORS Origins (comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://journal-6q0v.onrender.com,https://yourdomain.com

# Database Settings
DB_PATH=./journal.db

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security Headers
HELMET_ENABLED=true
CSP_ENABLED=true

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_PATH=./backups 